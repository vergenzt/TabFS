{
  "manifest_version": 3,

  "name": "TabFS",
  "description": "Mount your browser tabs as a filesystem",
  "version": "1.0",

  "permissions": [
    "bookmarks",
    "debugger",
    "management",
    "nativeMessaging",
    "tabCapture",
    "tabs",
    "tabGroups",
    "unlimitedStorage",
    "webNavigation",
    "<all_urls>"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "background": {
    "service_worker": "background.js"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabfs@rsnous.com"
    }
  }
}
